@model clermontSA2.Models.UserListViewModel

<h1>User List</h1>

@if (Model.Users.Any())
{
    <!-- Pagination Controls -->
    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" class="prev">Previous</a>
        }
        <span class="current-page">Page @Model.CurrentPage of @Model.TotalPages</span>
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })" class="next">Next</a>
        }
    </div>
    <table class="user-table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        <img class="userPic" src="@user.PictureUrl" alt="@user.Name's picture" width="50" height="50" style="border-radius: 50%;"/>
                    </td> <!-- Display the user's image -->
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td data-label="Detail">
                        <a href="@Url.Action("Details", "Main", new { id = user.Id })">View Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}
