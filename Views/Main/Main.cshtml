@model clermontSA2.Models.UserListViewModel

<h1>User List</h1>

@if (Model.Users.Any())
{
    <table class="user-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td><a href="@Url.Action("Details", "User", new { id = user.Id })">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>

    // pagination controls
    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" class="prev">Previous</a>
        }
        <span class="current-page">Page @Model.CurrentPage of @Model.TotalPages</span>
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })" class="next">Next</a>
        }
    </div>
}
else
{
    <p>No users found.</p>
}
